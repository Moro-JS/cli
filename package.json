{
  "name": "@morojs/cli",
  "version": "1.2.4",
  "description": "MoroJS Framework - Comprehensive Development Toolkit",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "morojs-cli": "./bin/cli.js",
    "moro-cli": "./bin/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepare-release": "bash scripts/prepare-release.sh",
    "prepublish": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --fix",
    "lint-staged": "lint-staged",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky"
  },
  "keywords": [
    "morojs",
    "cli",
    "generator",
    "scaffolding",
    "module",
    "typescript",
    "nodejs",
    "framework",
    "api",
    "microservice",
    "serverless",
    "edge",
    "lambda",
    "vercel",
    "cloudflare"
  ],
  "author": "Moro Framework Team",
  "license": "MIT",
  "homepage": "https://morojs.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Moro-JS/cli.git"
  },
  "bugs": {
    "url": "https://github.com/Moro-JS/cli/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "commander": "^14.0.0",
    "esbuild": "^0.25.9",
    "figlet": "^1.7.0",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "inquirer": "^8.2.6",
    "nodemon": "^3.0.2",
    "ora": "^5.4.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@morojs/moro": "^1.0.3",
    "@types/figlet": "^1.5.8",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "templates/**/*",
    "README.md",
    "LICENSE"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
